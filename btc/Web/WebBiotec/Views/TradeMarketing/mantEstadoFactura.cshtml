
@{
    ViewBag.Title = "mantEstadoFactura";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

    ViewBag.fechafin = WebBiotec.Models.DAO.DaoControlPresupuesto.CargarUltimaFecha();

